<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h2>User info</h2>

      <table>
        <tbody>
          <tr>
              <%= image_tag @user.get_profile_image(100,100) %>
          </tr>
          <tr>
            <td>name</td>
            <td></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td></td>
          </tr>
        </tbody>
      </table>

      <%= form_with model: Book.new do |f| %>
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title %>
        <%= f.label :body, 'Opinion' %>

        <%= f.submit 'Create Book' %>
      <% end%>
    </div>
  </div>
</div>