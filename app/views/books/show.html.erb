<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'userinfo', user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <td></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= link_to "Edit", edit_book_path(@book.id),class: "btn" %></td>
        <td><%= link_to "Destroy", book_path(@book.id), method: :destroy, class: "btn" %></td>
      </table>
    </div>
  </div>
</div>