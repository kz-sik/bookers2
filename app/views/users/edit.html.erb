<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <%= f.label :name, 'Name' %><br>
      <%= f.text_field :name %><br>
      <%= f.label :profile_image, 'Image' %><br>
      <%= f.file_field :profile_image %><br>
      <%= f.label :introduction, 'Introduction' %><br>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User", class:"btn btn-secondary" %><br>
      <% end %>
    </div>
  </div>
</div>